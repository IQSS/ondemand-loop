<div class="card mb-3 shadow-sm">
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-10">
        <h6 class="mb-1"><%= file.filename %></h6>
        <small class="text-muted">Size: <%= number_to_human_size(file.size) %></small><br>

        <% if file.status == 'downloading' %>
          <div class="progress mt-2" style="height: 20px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info"
                 role="progressbar"
                 style="width: <%= file.connector_status.download_progress %>%"
                 aria-valuenow="<%= file.connector_status.download_progress %>" aria-valuemin="0" aria-valuemax="100">
              <%= file.connector_status.download_progress %>%
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-2">
        <span class="badge
          <%= case file.status
              when 'success' then 'bg-success'
              when 'downloading' then 'bg-info'
              when 'error' then 'bg-danger'
              else 'bg-secondary'
              end %>">
          <%= file.status.capitalize %>
        </span>
      </div>
    </div>
  </div>
</div>