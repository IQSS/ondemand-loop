<div id="doi-search-container"class="container-md content mt-4" role="main">
  <%= render partial: '/shared/breadcrumbs', locals: { links: [{text: t('.doi_search')}]} %>
  <div class="container center-container">
     <%= image_tag "doi_logo.svg", alt: t('.doi_logo'), class: "logo" %>

    <h1 class="mb-4">
      <%= image_tag "icon.png", alt: t('.doi_logo'), height: "80" %>
      <span class="align-middle"><%= t('.doi_lookup') %></span>
    </h1>

    <%= form_with url: doi_search_post_path, method: :post, local: true, html: {autocomplete: false} do |form| %>
      <div class="mb-3">
        <%= form.text_field :doi, class: "form-control doi-input", placeholder: t('.doi_placeholder') %>
      </div>
      <div>
        <%= button_tag type: "submit", class: "btn btn-primary lookup-btn" do %>
          <span class=""><%= t('.search') %></span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>