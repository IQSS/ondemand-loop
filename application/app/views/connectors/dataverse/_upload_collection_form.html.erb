<%= form_with url: project_upload_collection_path(collection.project_id, collection.id), method: :put, local: true, html: { class: 'needs-validation', novalidate: true } do |f| %>
  <div class="mb-3">
    <%= f.label :remote_repo_url, t('.dataset_url'), class: 'form-label fw-bold' %>
    <%= f.url_field :remote_repo_url, name: 'collection[remote_repo_url]', value: collection.remote_repo_url, class: 'form-control', placeholder: 'https://example.org/dataset/123', required: true %>
    <div class="form-text"><%= t('.dataset_url_form_text') %></div>
  </div>

  <div class="mb-3">
    <%= f.label :api_key, t('.api_key'), class: 'form-label fw-bold' %>
    <%= f.text_field :api_key, name: 'collection[api_key]', value: collection.connector_metadata.api_key, class: 'form-control', placeholder: t('.api_key_placeholder'), required: true %>
    <div class="form-text"><%= t('.api_key_form_text') %></div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <button type="submit" class="btn btn-sm btn-primary">
      <i class="bi bi-save-fill me-1"></i> <%= t('.save_changes') %>
    </button>
    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">
      <%= t('.cancel') %>
    </button>
  </div>
<% end %>
