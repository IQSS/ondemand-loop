<% content_for :title, t('zenodo.records.show.page_title') %>
<div class="zenodo container-md content" role="main">
  <%= render partial: '/shared/breadcrumbs', locals: { links: [
    { text: t('shared.breadcrumbs.zenodo'), url: explore_path(connector_type: 'zenodo', server_domain: repo_url.domain, object_type: 'actions', object_id: 'landing', server_scheme: repo_url.scheme_override, server_port: repo_url.port_override) },
    { text: record.title }
  ] } %>

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'zenodo/records/record_actions', locals: { record: record, zenodo_url: repo_url.server_url } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'zenodo/records/record_info', locals: { record: record } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'zenodo/records/record_files', locals: { record: record, record_id: record_id, repo_url: repo_url } %>
    </div>
  </div>
</div>
