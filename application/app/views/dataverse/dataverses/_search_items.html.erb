<div class="card dataset-header">
  <div class="card-header"><%= "1 to 10 of #{search_result.data.total_count} Results" %></div>
  <% if search_result.data.items.any? %>
    <div class="list-group">
      <%= render partial: 'item', collection: search_result.data.items, as: :item, locals: {dataverse_url: dataverse_url} %>
    </div>

    <div class="mt-4 d-flex justify-content-center">
      <%# paginate @items %>
    </div>
  <% else %>
    <div class="alert alert-warning mt-3">
      No items found.
    </div>
  <% end %>
</div>
