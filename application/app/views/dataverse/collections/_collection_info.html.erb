<div class="card mb-3">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
      <div class="flex-grow-1 d-flex flex-column">
        <h2 class="mb-0 text-nowrap h5"><%= t('.header_dataverse_text') %></h2>
        <span class="text-muted" style="font-size: 0.8rem;">
          <strong><%= collection.data.name %></strong>
        </span>
      </div>
      <%= link_to external_collection_url(current_dataverse_url, collection.data.alias),
                  target: '_blank',
                  class: 'btn btn-sm btn-outline-dark',
                  title: t('.link_open_collection_title') do %>
        <i class="bi bi-box-arrow-up-right" aria-hidden="true"></i>
        <span class="visually-hidden"><%= t('.link_open_collection_title') %></span>
      <% end %>
    </div>
    <div class="mt-2">
      <a class="d-flex align-items-center text-decoration-none text-secondary"
         data-bs-toggle="collapse"
         data-controller="utils--icon-toggle"
         data-utils--icon-toggle-icon-on-value="bi-plus-square"
         data-utils--icon-toggle-icon-off-value="bi-dash-square"
         data-action="click->utils--icon-toggle#toggle"
         href="#collection-details"
         role="button"
         aria-expanded="false"
         aria-controls="collection-details">
        <i data-utils--icon-toggle-target="icon" class="bi bi-plus-square me-2 transition" id="toggle-icon" aria-hidden="true"></i>
        <span><%= t('.button_toggle_label') %></span>
      </a>
      <div class="collapse" id="collection-details">
        <div class="bg-light pt-2">
          <%= strip_tags(collection.data.description) %>
        </div>
      </div>
    </div>
  </div>
</div>