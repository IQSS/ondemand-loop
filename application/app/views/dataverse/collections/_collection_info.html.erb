<% description = collection.data.description %>
<div class="card mb-3">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
      <div class="flex-grow-1 d-flex flex-column">
        <h2 class="mb-0 text-nowrap h5"><%= t('.header_dataverse_text') %></h2>
        <span class="text-muted" style="font-size: 0.8rem;"><strong><%= collection.data.name %></strong></span>
      </div>
      <div class="flex-grow-1 d-flex flex-column">
        <span title="<%= description %>">
          <%= truncate(strip_tags(description), length: 150) %>
        </span>
      </div>
    </div>
  </div>
</div>