<div class="projects container-md content mt-4" role="main">
  <%= render partial: '/shared/breadcrumbs', locals: { links: [{text: 'Projects'}]} %>
  <div class="row">
      <div class="col-md-12">
        <%= render partial: 'actions' %>

        <%= render partial: 'project', locals: { project: @active_project, active: true } if @active_project %>
        <% @projects.each do |project| %>
          <%= render partial: 'project', locals: { project: project } unless project.id == @active_project&.id %>
        <% end %>

      </div>
  </div>
</div>