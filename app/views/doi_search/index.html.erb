<style>
    /* Custom CSS for centering */
    .center-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 50vh;
        text-align: center;
    }

    .doi-input {
    }

    .lookup-btn {
        margin-top: 10px;
        width: 300px;
    }

    .lookup-btn img {
        max-height: 30px;
    }

    form {
        width: 100%;
    }

    .logo {
        max-width: 150px;
        margin-bottom: 20px;
    }
</style>
<div class="container center-container">

  <img src="/doi_logo.svg" class="logo">

  <h1 class="mb-4">
    <img src="/icon.png" alt="Icon" height="80">
    <span class="align-middle">DOI Lookup</span>
  </h1>

  <%= form_with url: doi_search_post_path, method: :post, local: true, html: {autocomplete: false} do |form| %>
    <div class="mb-3">
      <%= form.text_field :doi, class: "form-control doi-input", placeholder: "Enter DOI..." %>
    </div>
    <div>
      <%= button_tag type: "submit", class: "btn btn-primary lookup-btn" do %>
        <span class="">Search</span>
      <% end %>
    </div>
  <% end %>

</div>