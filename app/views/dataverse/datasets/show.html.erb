<% validation_result = validate_dataset(@dataset) %>

<div class="container-md content mt-4" role="main">
  <%= render partial: 'dataverse/datasets/breadcrumbs', locals: { dataverse_url: @dataverse_url, dataset: @dataset} %>
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'dataverse/datasets/dataset_info', locals: { dataset: @dataset } %>
      <%= render partial: 'dataverse/datasets/dataset_metadata', locals: { dataset: @dataset } %>
    </div>
    <div class="col-md-9">
        <% if validation_result.valid %>
          <%= render partial: 'dataverse/datasets/dataset_files', locals: { files: @files, dataverse_url: @dataverse_url, dataset: @dataset} %>
        <% else %>
          <%= validation_result.message %> 
        <% end %>
    </div>
  </div>
</div>