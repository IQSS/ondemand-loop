<div class="container-md content mt-4" role="main">
  <%= render partial: 'dataverse/datasets/breadcrumbs', locals: { dataverse_metadata: @dataverse_metadata, dataset: @dataset} %>
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'dataverse/datasets/dataset_info', locals: { dataset: @dataset } %>
      <%= render partial: 'dataverse/datasets/dataset_metadata', locals: { dataset: @dataset } %>
    </div>
    <div class="col-md-9">
      <div class="card dataset-header">
        <div class="card-header">Files</div>
        <%= form_with url: download_dataverse_dataset_files_path(@dataverse_metadata.id, @dataset.data.id), method: :post, local: true, class: "p-4 border rounded bg-light" do %>
          <div class="row">
            <% @files.each do |file| %>
              <%= render partial: 'dataverse/datasets/dataset_file', locals: {file: file, dataverse_metadata: @dataverse_metadata} %>
            <% end %>
          </div>
          <div class="text-center mt-4">
            <%= submit_tag "Download Selected Files", class: "btn btn-primary", id: "submit_button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>