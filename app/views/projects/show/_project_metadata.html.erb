<div id="tab-project-metadata" class="tab-pane fade show active" role="tabpanel" aria-labelledby="download-tab">
  <div class="row">
    <!-- Left: Project Metadata -->
    <div class="col-md-8 mb-3">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0"><%= t('.project_details') %></h5>
        </div>
        <div class="card-body">
          <p><strong><%= t('.name') %>:</strong> <%= project.name %></p>
          <p><strong><%= t('.download_directory') %>:</strong> <%= project.download_dir %></p>
          <p><strong><%= t('.created_at') %>:</strong> <%= project.creation_date %></p>
          <!-- Add more metadata as needed -->
        </div>
      </div>
    </div>

    <!-- Right: File State Summary Widget -->
    <div class="col-md-4 mb-3">
      <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white">
          <h6 class="mb-0"><%= t('.file_summary') %></h6>
        </div>
        <div class="card-body">
          <p><strong><%= t('.total_files') %>:</strong> <%= t('.here') %></p>
          <p><strong><%= t('.missing_files') %>:</strong> <%= t('.here') %></p>
          <p><strong><%= t('.last_sync') %>:</strong> <%= t('.here') %></p>
          <!-- More summary info here -->
        </div>
      </div>
    </div>
  </div>




</div>
